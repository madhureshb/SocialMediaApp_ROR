<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class="colmd-12">
      <tbody> 
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><strong>Actions: </strong> 
            <% if current_account.not_friends_with?(friend.id) %>
               <%= link_to 'Send Request', friendships_path(friend_id: friend.id, user_id: current_account.id),
                                class: "btn btn-sm btn-success", method: :post %>
            <% else %>
              <span class="badge badge-secondary">
                You are friends
              </span>
            <% end %>  
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

